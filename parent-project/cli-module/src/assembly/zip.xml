<?xml version="1.0"?>
<assembly xmlns="http://maven.apache.org/ASSEMBLY/2.2.0"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://maven.apache.org/ASSEMBLY/2.2.0 http://maven.apache.org/ASSEMBLY/2.2.0/assembly.xsd">
    <id>dist</id>
    <formats>
        <format>zip</format>
    </formats>
    <includeBaseDirectory>false</includeBaseDirectory>
    <fileSets>
        <!-- JAR из core-module -->
        <fileSet>
            <directory>${project.parent.basedir}/core-module/target</directory>
            <includes>
                <include>*.jar</include>
            </includes>
        </fileSet>
        <!-- JAR из cli-module -->
        <fileSet>
            <directory>${project.build.directory}</directory>
            <includes>
                <include>*.jar</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>